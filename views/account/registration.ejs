<title><%= title %></title>
<h1><%= title %></h1>

<% if (typeof message !== 'undefined' && message) { %>
<div class="flash-message"><%= message %></div>
<% } %>

<form class="register-form" action="/account/registration" method="post">
  <label for="fName">First Name: <span style="color: white">*</span></label>
  <input type="text" id="fName" name="account_fName" required />

  <label for="lName">Last Name: <span style="color: white">*</span></label>
  <input type="text" id="lName" name="account_lName" required />

  <label for="email">Email address: <span style="color: white">*</span></label>
  <input type="email" id="email" name="account_email" required />

  <label for="password">Password: <span style="color: white">*</span></label>
  <div class="password-container">
    <input
      type="password"
      id="password"
      name="account_password"
      required
      minlength="12"
      pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*()_+\-=\[\]{};:\\|,.<>\/?]).{12,}$"
      title="Password must be at least 12 characters, contain a capital letter, a number, and a special character."
      class="password-input"
    />
    <i
      class="uil uil-eye-slash toggle"
      id="togglePassword"
      tabindex="0"
      aria-label="Show password"
    ></i>
  </div>
  <small>
    Password must be at least 12 characters, contain at least 1 capital letter,
    1 number, and 1 special character.
  </small>
  <small>* Required fields</small>
  <button type="submit">Register</button>

  <script src="/js/password-toggle.js"></script>
</form>
