<title><%= title %></title>
<h1><%= title.charAt(0).toUpperCase() + title.slice(1) %></h1>

<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<h2>Welcome <%= firstname %></h2>
<p>You are logged in.</p>

<p>
  <a class="update-account-link" href="/account/update/<%= account_id %>">Update Account</a>
</p>
<% if (account_type === 'Employee' || account_type === 'Admin') { %>
  <div class="inv-management-section">
    <h3>Inventory Management</h3>
    <button class="inv-management-button">
      <a class="inv-management-link" href="/inv/">Go to Inventory Management</a>
    </button>
  </div>
<% } %>