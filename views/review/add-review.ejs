<title><%= title %></title>
<h1><%= title %></h1>

<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form action="/review/add/<%= inv_id %>" method="post" class="review-form">
    <label for="review_text">Your Review:</label>
    <textarea id="review_text" name="review_text" required rows="4"><%= typeof review_text !== 'undefined' ? review_text : '' %></textarea>

    <label for="rating">Rating (1-5):</label>
    <select id="rating" name="rating" required>
        <% for(let i=1; i<=5; i++) { %>
        <option value="<%= i %>" <%= typeof rating !== 'undefined' && rating == i ? 'selected' : '' %>><%= i %></option>
        <% } %>
    </select>

    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <button type="submit">Submit Review</button>
</form>
